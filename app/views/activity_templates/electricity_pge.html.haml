	of electricity

	- if locals["extras"]["full_view"]
		%section.entry-content
			%div{ id: "graph_#{locals["id"]}" }

		:javascript
			(function ($, window) { $(function () {
				graph({
					data: #{time_series.join("+")},
					selector: $("#graph_#{locals["id"]}"),
					valueRange: [0, 10]
				})
			}) })(window.$ || window.jQuery || window.Zepto, window);
