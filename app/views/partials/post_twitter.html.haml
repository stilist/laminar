- tweet = locals["data"]
%section{ class: item_classes(locals), style: item_hsl(locals) }
	%h1.entry-title
		- if tweet["retweeted_status"]
			- retweet = eval(tweet["retweeted_status"])
			retweeted
			= precede "@" do
				%a{ href: Twitter::person_url(retweet) }><
					= retweet["user"]["screen_name"]
		- else
			posted a
			%a{ href: Twitter::tweet_url(tweet) }
				tweet
			- if tweet["in_reply_to_screen_name"]
				in reply to
				%a{ href: "https://twitter.com/#{tweet["in_reply_to_screen_name"]}/status/#{tweet["in_reply_to_status_id_str"]}" }
					@#{tweet["in_reply_to_screen_name"]}

	%section.entry-content
		%blockquote
			%p
				= Twitter::text tweet["text"]

	= partial "_item_metadata", locals
