- data = locals["data"]
%section{ class: item_classes(locals), style: item_hsl(locals) }
	%h1.entry-title
		bookmarked
		%a{ href: locals["url"] }
			= data["description"].empty? ? locals["url"] : data["description"]

	%section.entry-content
		- description = data["extended"]
		- unless description.empty?
			%blockquote
				%p
					= nl2br description

	= partial "_item_metadata", locals
