- photo = locals["data"]
%section{ class: item_classes(locals), style: item_hsl(locals) }
	%h1.entry-title
		- type = (photo.has_key? "video") ? "video" : "photo"
		- if photo["title"].empty?
			posted a #{type}
		- else
			posted the #{type}
			= surround "‘", "’" do
				%a{ href: locals["url"] }<>
					= h photo["title"]

	- if locals["extras"]["full_view"]
		%section.entry-content
			%a{ href: LFlickr::photo_url(photo) }
				%img{ src: LFlickr::photo_source_url(photo, "b") }

			- description = photo["description"]
			- unless description.empty?
				%blockquote
					%p
						= nl2br description

	= partial "_item_metadata", locals
